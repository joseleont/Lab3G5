<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EdicionTemporizador">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="enviarTemporizadorEditado"
        android:text="@string/aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.661" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="132dp"
        android:layout_height="78dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:text="Número de ciclos pomodores"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textCiclos"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textCiclos"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:hint="número de ciclos"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="151dp"
        android:layout_height="63dp"
        android:layout_marginTop="80dp"
        android:text="Temporizador de trabajo"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/trabajoMinutos"
        android:layout_width="73dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:hint="Minutos"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.363" />

    <EditText
        android:id="@+id/trabajoSegundos"
        android:layout_width="82dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:hint="Segundos"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/trabajoMinutos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toEndOf="@+id/trabajoMinutos"
        app:layout_constraintTop_toTopOf="@+id/trabajoMinutos"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="152dp"
        android:layout_height="121dp"
        android:layout_marginTop="36dp"
        android:text="Temporizador de descanso"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/descansoMinutos"
        android:layout_width="83dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Minutos"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/trabajoMinutos"
        app:layout_constraintStart_toStartOf="@+id/trabajoMinutos"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <EditText
        android:id="@+id/descansoSegundos"
        android:layout_width="79dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Segundos"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/descansoMinutos"
        app:layout_constraintEnd_toEndOf="@+id/trabajoSegundos"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/trabajoSegundos"
        app:layout_constraintTop_toTopOf="@+id/descansoMinutos" />

</androidx.constraintlayout.widget.ConstraintLayout>